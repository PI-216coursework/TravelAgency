
@{
    ViewBag.Title = "RoomReservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container col-lg-push-4">
    <h2>Adding new design</h2>
    <div class="form-group">
        <label for="userid">User Id</label>
        <input type="number" class="form-control" id="userid" placeholder="User Id" name="userid">
        <label for="hotelid">Hotel Id</label>
        <input type="number" class="form-control" id="hotelid" placeholder="Hotel Id" name="hotelid">
        <label for="hotelroomid">Hotel room Id</label>
        <input type="number" class="form-control" id="hotelroomid" placeholder="Hotel room Id" name="hotelroomid">
        <label for="arrival">Arrival date</label>
        <input type="text" class="form-control" id="arrival" placeholder="Arrival date" name="arrival">
        <label for="departure">Departure date</label>
        <input type="text" class="form-control" id="departure" placeholder="Departure date" name="departure">
    </div>
    <button type="submit" class="btn btn-default" onclick="AddRes()">Submit</button>
</div>
@section scripts{
    <script type="text/javascript">

        function AddRes() {
            var Res = {
                UserId: $('#userid').val(),
                HotelId: $('#hotelid').val(),
                RoomId: $('#hotelroomid').val(),
                Arrival: $('#arrival').val(),
                Departure: $('#departure').val()
            }
                $.ajax({
                    url: '/api/roomreserv/',
                    type: 'POST',
                    dataType: 'JSON',
                    data: JSON.stringify(Res),
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        alert("Success")
                    },
                    error: function (error) {
                        alert(error.responseText);
                    }
                });
        }
    </script>
}

